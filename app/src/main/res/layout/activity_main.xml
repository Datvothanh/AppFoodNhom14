<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DEDFED"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#095EC6"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="left"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_food_van_svgrepo_com"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="33dp" />

        <RadioGroup
            android:id="@+id/group_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/radiobuttongroup_main"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="86dp"
            tools:layout_editor_absoluteY="2dp">

            <RadioButton
                android:id="@+id/radio_odau"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_selector"
                android:button="@android:color/transparent"
                android:checked="true"
                android:padding="10dp"
                android:text="Ở đâu"
                android:textColor="@drawable/changecheck_radiomain" />

            <RadioButton
                android:id="@+id/radio_angi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_selector_1"
                android:button="@android:color/transparent"
                android:padding="10dp"
                android:text="Ăn gì"
                android:textColor="@drawable/changecheck_radiomain" />
        </RadioGroup>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            app:srcCompat="@android:drawable/ic_input_add"
            tools:ignore="MissingConstraints" />

    </androidx.appcompat.widget.Toolbar>


    <RadioGroup
        android:id="@+id/group_tab"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        tools:ignore="MissingConstraints">

        <RadioButton
            android:id="@+id/radio_moinhat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/changebackground_tab_main"
            android:button="@android:color/transparent"
            android:text="Mới nhất"
            android:textAlignment="center"
            android:textColor="@drawable/changetext_tab_main" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#CCC" />

        <RadioButton
            android:id="@+id/radio_danhmuc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/changebackground_tab_main"
            android:button="@android:color/transparent"
            android:text="Danh mục"
            android:textAlignment="center"
            android:textColor="@drawable/changetext_tab_main" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#CCC" />

        <RadioButton
            android:id="@+id/radio_khuvuc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/changebackground_tab_main"
            android:button="@android:color/transparent"
            android:text="@string/khuvuc"
            android:textAlignment="center"
            android:textColor="@drawable/changetext_tab_main" />
    </RadioGroup>


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="411dp"
        android:layout_height="506dp"
        android:layout_marginTop="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/group_tab"
        tools:ignore="MissingConstraints">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragmentContainerView"
            android:name="hcmute.edu.vn.nhom14.appfood.view.fragment.AngiFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragmentContainerView2"
            android:name="hcmute.edu.vn.nhom14.appfood.view.fragment.OdauFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.viewpager.widget.ViewPager>


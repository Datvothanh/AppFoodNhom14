<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#DEDFED">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#095EC6"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="left"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_food_van_svgrepo_com"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="33dp" />

        <RadioGroup
            android:id="@+id/group_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/radiobuttongroup_main"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="86dp"
            tools:layout_editor_absoluteY="2dp">

            <RadioButton
                android:id="@+id/radio_odau"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_selector"
                android:button="@android:color/transparent"
                android:checked="true"
                android:padding="10dp"
                android:text="Ở đâu"
                android:textColor="@drawable/changecheck_radiomain" />

            <RadioButton
                android:id="@+id/radio_angi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_selector_1"
                android:button="@android:color/transparent"
                android:padding="10dp"
                android:text="Ăn gì"
                android:textColor="@drawable/changecheck_radiomain" />
        </RadioGroup>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            app:srcCompat="@android:drawable/ic_input_add"
            tools:ignore="MissingConstraints" />

    </androidx.appcompat.widget.Toolbar>



</RelativeLayout>